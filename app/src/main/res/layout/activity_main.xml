<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/pale_pink_50"
    android:id="@+id/mainActivity"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:hint="0"
                android:textColor="@color/pale_pink_700"
                android:textColorHint="@color/pale_pink_700"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_500"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_500"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="del"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_modular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="%"
                android:textColor="@color/white"
                android:backgroundTint="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_700"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="7"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="8"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="9"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_700"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="4"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="5"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="6"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_subtraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_700"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="1"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="2"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="3"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_700"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="0"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="."
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="+/-"
                android:textColor="@color/pale_pink_700"
                android:textSize="30dp"
                app:cornerRadius="0dp" />


            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pale_pink_700"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="20dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="0dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

